---
export interface Props {
	tags: string[];
}

const { tags } = Astro.props;
---

<div class="article-meta my-6">
	{tags && tags.length > 0 && (
		<div class="tags-section">
			<div class="tags-list flex flex-wrap gap-2">
				{tags.map((tag) => (
					<a
						href={`/articles/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
						class="tag-link px-3 py-1.5 text-xs font-medium text-accent bg-accent/5 hover:bg-accent hover:text-white hover:border-accent hover:shadow-sm hover:-translate-y-0.5 transition-all duration-200 ease-out rounded-md border border-accent/20"
					>
						#{tag}
					</a>
				))}
			</div>
		</div>
	)}
</div>



