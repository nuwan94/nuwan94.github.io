<style>
	.arwes-footer {
		margin-top: 4rem;
		background: var(--color-bg-secondary);
		border-top: 1px solid var(--color-border);
		box-shadow: 0 -10px 30px rgba(0, 217, 255, 0.2);
	}

	.footer-line {
		height: 2px;
		background: linear-gradient(
			90deg,
			transparent 0%,
			var(--color-primary) 50%,
			transparent 100%
		);
		animation: pulse 2s ease-in-out infinite;
	}

	.footer-line.top {
		opacity: 0.8;
	}

	.footer-line.bottom {
		opacity: 0.5;
	}

	@keyframes pulse {
		0%, 100% {
			opacity: 0.5;
		}
		50% {
			opacity: 1;
		}
	}

	.footer-content {
		padding: 2rem 1rem;
		padding-bottom: 6rem;
		text-align: center;
	}

	.copyright {
		color: var(--color-text-secondary);
		margin-bottom: 1rem;
		font-size: 0.9rem;
	}

	.bracket {
		color: var(--color-accent);
		margin: 0 0.25rem;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		margin-top: 1rem;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		color: var(--color-text-secondary);
		text-decoration: none;
		transition: all var(--duration-normal) ease;
		padding: 0.5rem;
		border: 1px solid transparent;
		border-radius: 4px;
	}

	.social-link:hover {
		color: var(--color-primary);
		transform: translateY(-2px);
		border-color: var(--color-border-dim);
		background: rgba(0, 217, 255, 0.05);
		box-shadow: 0 0 15px rgba(0, 217, 255, 0.4);
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
</style>

