---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="formatted-date">
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

<style>
	.formatted-date {
		color: var(--color-text-secondary);
		font-family: var(--font-family-mono);
		font-size: 0.9em;
	}
</style>
