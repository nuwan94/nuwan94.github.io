---
interface Props {
  title: string;
  description?: string;
  url?: string;
}

const { title, description = '', url } = Astro.props;
const currentUrl = url || Astro.url.href;

// Create engaging share message
const shareMessage = description 
  ? `Found a great article on "${title}"\n\n${description}\n\nLink: ${currentUrl}`
  : `Found a great article on "${title}"\n\nLink: ${currentUrl}`;

// Encode URLs for social sharing
const encodedUrl = encodeURIComponent(currentUrl);
const encodedTitle = encodeURIComponent(title);
const encodedMessage = encodeURIComponent(shareMessage);

// Social media share URLs
const twitterUrl = `https://twitter.com/intent/tweet?text=${encodedMessage}`;
const linkedInUrl = `https://www.linkedin.com/feed/?shareActive=true&text=${encodedMessage}`;
const redditUrl = `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`;
const whatsappUrl = `https://wa.me/?text=${encodedMessage}`;
---

<div class="social-share">
  <span class="share-label">
    <span class="bracket">[</span>
    Share
    <span class="bracket">]</span>
  </span>
  <div class="share-buttons">
    <a 
      href={twitterUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="share-button twitter"
      aria-label="Share on Twitter"
      title="Share on Twitter"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
    </a>
    
    <a 
      href={linkedInUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="share-button linkedin"
      aria-label="Share on LinkedIn"
      title="Share on LinkedIn"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </a>
    
    <button 
      class="share-button copy-link"
      aria-label="Copy link"
      title="Copy link"
      data-url={currentUrl}
      onclick="
        navigator.clipboard.writeText(this.dataset.url).then(() => { 
          this.classList.add('copied'); 
          const toast = document.getElementById('copy-toast');
          toast.classList.add('show');
          setTimeout(() => {
            this.classList.remove('copied');
            toast.classList.remove('show');
          }, 2000); 
        });
      "
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
      </svg>
    </button>
    
    <a 
      href={redditUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="share-button reddit"
      aria-label="Share on Reddit"
      title="Share on Reddit"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
      </svg>
    </a>
    
    <a 
      href={whatsappUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="share-button whatsapp"
      aria-label="Share on WhatsApp"
      title="Share on WhatsApp"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
      </svg>
    </a>
  </div>
</div>

<div id="copy-toast" class="toast">
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <polyline points="20 6 9 17 4 12"></polyline>
  </svg>
  <span>Link copied to clipboard!</span>
</div>

<style>
  .social-share {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 2rem 0;
    padding: 1.5rem;
    border: 1px solid var(--color-border-dim);
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.3);
    box-shadow: 0 0 20px rgba(0, 217, 255, 0.1);
  }

  .share-label {
    font-weight: 600;
    color: var(--color-text-primary);
    white-space: nowrap;
    font-size: 1rem;
  }

  .bracket {
    color: var(--color-accent);
    margin: 0 0.25rem;
  }

  .share-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .share-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0, 217, 255, 0.1);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .share-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 217, 255, 0.3);
  }

  .share-button.twitter:hover {
    background: rgba(29, 155, 240, 0.2);
    border-color: #1da1f2;
    color: #1da1f2;
  }

  .share-button.linkedin:hover {
    background: rgba(10, 102, 194, 0.2);
    border-color: #0a66c2;
    color: #0a66c2;
  }

  .share-button.copy-link {
    background: rgba(0, 217, 255, 0.1);
    border: 1px solid var(--color-border);
    cursor: pointer;
  }

  .share-button.copy-link:hover {
    background: rgba(0, 217, 255, 0.2);
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .share-button.copy-link.copied {
    background: rgba(34, 197, 94, 0.2);
    border-color: #22c55e;
    color: #22c55e;
  }

  .share-button.reddit:hover {
    background: rgba(255, 69, 0, 0.2);
    border-color: #ff4500;
    color: #ff4500;
  }

  .share-button.whatsapp:hover {
    background: rgba(37, 211, 102, 0.2);
    border-color: #25d366;
    color: #25d366;
  }

  @media (max-width: 640px) {
    .social-share {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .share-buttons {
      width: 100%;
      justify-content: center;
    }
  }

  .toast {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: rgba(0, 0, 0, 0.9);
    border: 1px solid var(--color-accent);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-accent);
    font-weight: 500;
    box-shadow: 0 4px 20px rgba(0, 217, 255, 0.3);
    opacity: 0;
    transform: translateY(100%);
    transition: all 0.3s ease;
    pointer-events: none;
    z-index: 1000;
  }

  .toast.show {
    opacity: 1;
    transform: translateY(0);
  }

  .toast svg {
    color: #22c55e;
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .toast {
      right: 1rem;
      left: 1rem;
      bottom: 1rem;
    }
  }
</style>
